<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#eeeeee">
        
    <View
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#e12f2f" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:text="POKELEXIA"
            android:textSize="30sp"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/gotopokelist"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:background="#e12f2f"
            android:textColor="#ffffff"
            android:layout_marginTop="60sp"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Pokelist"
            android:onClick="gotoPokelist"/>

        <Button
            android:id="@+id/gotomoves"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:background="#a5e65f"
            android:textColor="#ffffff"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Moves" 
            android:onClick="gotoMoves"
            />

        <Button
            android:id="@+id/gotoitems"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:background="#ffa518"
            android:textColor="#ffffff"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Items"
            android:onClick="gotoItems"
            />

        <Button
            android:id="@+id/gotofavorites"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:background="#5fcbe6"
            android:textColor="#ffffff"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="Favorites"
            android:onClick="gotoFavorites"
            />
    </LinearLayout>

</RelativeLayout>