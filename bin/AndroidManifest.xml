<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pixlexia.pokelexia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pixlexia.pokelexia.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pixlexia.pokelexia.Pokelist"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.pixlexia.pokelexia.Favorites"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_favorites" >
        </activity>
        <activity
            android:name="com.pixlexia.pokelexia.PokemonPage"
            android:label="@string/title_activity_pokemon_page" >
        </activity>
        <activity
            android:name="com.pixlexia.pokelexia.ItemList"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_item_list" >
        </activity>
        <activity
            android:name="com.pixlexia.pokelexia.Moves"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_moves" >
        </activity>
    </application>

</manifest>